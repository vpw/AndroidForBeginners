<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.birdsofindia.MainActivity"
    android:clickable="false">

    <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/boifront"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="#80F0F4C3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:layout_gravity="center_horizontal"
            android:textSize="45dp"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:typeface="serif"
            android:textColor="#1B5E20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="of"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:typeface="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textSize="45dp"
            android:textAllCaps="true"
            android:typeface="sans"
            android:textColor="#FF5722"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="explore"
            android:background="#80FFEB3B"
            android:textColor="#EEEEEE"
            android:ellipsize="end" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="quiz"
            android:background="#801E88E5"
            android:textColor="#EEEEEE"
            android:ellipsize="end" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="aboutUs"
            android:background="#808BC34A"
            android:textColor="#EEEEEE"
            android:ellipsize="marquee" />

    </LinearLayout>
</RelativeLayout>

